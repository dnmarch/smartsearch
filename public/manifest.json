{
    "manifest_version": 2,
    "name": "SmartSearch",
    "description": "Intelligently search the web",
    "version": "0.1",
    "icons": {
        "16": "./favicon.png",
        "48": "./favicon.png",
        "128": "./favicon.png"
    },
    "content_scripts": [
        {
            "matches" : [
                "<all_urls>"
            ],
            "js" : [
                "content.js"
            ]
        }
    ],
    "browser_action": {
        "default_icon": {
            "19": "./favicon.png",
            "38": "./favicon.png"
        },
        "default_popup": "index.html",
        "default_title": "Intelligently search the web"
    },
    "permissions": [
        "activeTab",
        "*://*/*"
    ]
}
